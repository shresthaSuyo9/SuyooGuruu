<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                             https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <display-name>Management_System</display-name>

    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>SuyoGuruu_Registration_Page.html</welcome-file>
        <welcome-file>SuyoGuruu_Registration_Page.jsp</welcome-file>
        <welcome-file>Login.jsp</welcome-file>
        <welcome-file>default.jsp</welcome-file>
    </welcome-file-list>

    <!-- Static Resources -->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/CSS/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/Resources/*</url-pattern>
    </servlet-mapping>

    <!-- JSP login file mapped -->
    <servlet>
        <servlet-name>LoginPage</servlet-name>
        <jsp-file>/Login.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginPage</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Java Servlet mapping for LoginController -->
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.suyog.controller.LoginCTL</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>

</web-app>
